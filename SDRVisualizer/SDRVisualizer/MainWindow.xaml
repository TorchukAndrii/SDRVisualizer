<Window x:Class="SDRVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spectrum Analyzer" MinHeight="500" MinWidth="1050" Background="Black">
    <Grid>
        <StackPanel>
            <Image x:Name="SpectrumImage" Width="2048" Height="200" VerticalAlignment="Top" Margin="5"/>
            <!--<Image x:Name="WaterfallImage" Width="2048" Height="200" VerticalAlignment="Bottom" Margin="5"/>-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Start" Click="Start_Click" Margin="10" Background="Gray" Foreground="White"/>
                <Button Content="Stop" Click="Stop_Click" Margin="10" Background="Gray" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>